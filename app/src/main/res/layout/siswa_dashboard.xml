                                    android:background="#75FAFAFA"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/dlpn_standar_pendidikan" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
