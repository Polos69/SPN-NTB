<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scsc"
        android:layout_width="match_parent"
        android:layout_above="@+id/linbot"
        android:layout_below="@+id/toph"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:elevation="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="#BDBDBD"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_jam"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:textSize="5pt"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="07.30 - 09.00"
                                        android:textAlignment="center"
                                        android:gravity="center_horizontal" />

                                    <TextView
                                        android:id="@+id/txt_tgl"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:visibility="gone"
                                        android:text="-" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="#e3e3e3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="8dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/txt_mapel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:gravity="center"
                                            android:text="-"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textColor="#000000"
                                            android:inputType="textMultiLine"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="8dp"
                                            android:gravity="center"
                                            android:text="JP"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/txt_jp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginLeft="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="8dp"
                                            android:gravity="center"
                                            android:text="LALU"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/txt_lalu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginLeft="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="8dp"
                                            android:gravity="center"
                                            android:text="TUANG"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/txt_tuang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="8dp"
                                            android:gravity="center"
                                            android:text="SISA"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/txt_sisa"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textColor="#000000"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>